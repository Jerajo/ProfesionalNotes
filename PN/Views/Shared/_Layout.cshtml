<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PN | @ViewBag.Title</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />
    @Styles.Render("~/Content/css")
    <link id="theme" rel="stylesheet" type="text/css" href="~/Content/dark-theme.css" >
    @RenderSection("styles", required: false)
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="page-container">
        @{
            Html.RenderPartial("_NavigationBar");
            Html.RenderPartial("_CookieConsent");
        }
        <div id="content-main" class="container body-content">
            @RenderBody()
        </div>
        <footer id="footer" class="text-center">
            <p>&copy; @DateTime.Now.Year - Desarrollado por <a href="https://github.com/Jerajo" target="_blank">Jesse R. Jose</a>.</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/App.js"></script>
</body>
</html>
